<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- ! boostrap link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Markdown Blog</title>
  </head>
  <body>
    <!-- ! ejs templates used for the blogs -->
    <div class="container">
      <!-- ! h1 class with a margin bottom of 4 -->
      <h1 class="mb-4">Blog Articles</h1>
      <!-- ! a tag to create a new article -->
      <a href="/articles/new" class="btn btn-success"> New Article </a>
      <!-- ! loops over the array of objects for articles and grabs the title for an article -->
      <% articles.forEach(article => {%>
      <!-- ! display the article on a card -->
      <div class="card mt-4">
        <div class="card-body">
          <!-- ! grabs the title and displays it to the body of the card -->
          <h4 class="card-title"><%= article.title %></h4>
          <!-- ! subtitle and date for the article-->
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <!-- ! article's description can be described  -->
          <div class="card-text mb-2"><%= article.description %></div>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
